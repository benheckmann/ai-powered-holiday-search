generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model OfferDeprecated {
  offerid                  Int      @id @default(autoincrement())
  hotelid                  Int
  departuredate            DateTime
  returndate               DateTime
  countadults              Int
  countchildren            Int
  price                    Decimal
  inbounddepartureairport  String
  inboundarrivalairport    String
  inboundairline           String
  inboundarrivaldatetime   DateTime
  outbounddepartureairport String
  outboundarrivalairport   String
  outboundairline          String
  outboundarrivaldatetime  DateTime
  mealtype                 String
  oceanview                String
  roomtype                 String

  @@map("offers")
}

model HotelDeprecated {
  hotelid    Int     @id
  hotelname  String
  latitude   Decimal
  longitude  Decimal
  hotelstars Decimal

  @@map("hotels")
}

model Offer {
  offerid                   Int      @id @default(autoincrement())
  hotelid                   Int
  outbounddeparturedatetime DateTime
  inbounddeparturedatetime  DateTime
  countadults               Int
  countchildren             Int
  price                     Float    @db.Float
  inbounddepartureairport   String
  outboundarrivalairport    String
  inboundarrivaldatetime    DateTime
  outbounddepartureairport  String
  inboundarrivalairport     String
  outboundarrivaldatetime   DateTime
  mealtype                  String
  oceanview                 String
  roomtype                  String

  @@index([hotelid], map: "newoffers_hotelid_fkey")
  @@map("newoffers")
}

model Hotel {
  hotelid    Int    @id
  hotelname  String
  hotelstars Int

  @@map("newhotels")
}
